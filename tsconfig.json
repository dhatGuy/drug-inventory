{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "preserve",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~/components/*": ["src/components/*"],
      "~/lib/*": ["src/lib/*"]
    }
  }
}
